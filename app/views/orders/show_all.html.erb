<div class="container-fluid">
  <div class="row">

    <div class="col-sm-10 col-sm-offset-1">
    <h3>All Orders</h3>

    <% @order.each do |orders| %>
    <table border="1" class="table table-order">
      <tr>
	<th colspan="5">
	<p>
	<strong>
	  Name:
	</strong>
	<%= orders.name %>
	</p>
	<p>
	<strong>
	  Address:
	</strong>
	<%= orders.address %>
	</p>
	<p>
	<strong>
	  Payment Types:
	</strong>
	<%= orders.pay_type %>
	</p>
	<p>
	<strong>
	  User:
	</strong>
	<%= orders.user_id %>
	</p>
	<p>
	<strong>
	  Order ID:
	</strong>
	<%= orders.id %>
	</p>
	</th>
      </tr>
      <tr>
	<th class="check icon" title="Load Check">LC</th>
	<th class="check icon" title="Quality Check">QC</th>
      <th class="item-name">Item name</th>
      <th class="item-quantity">Quantity</th>
      <th class="item-price">Price</th>
      </tr>
    </table>
	<% orders.line_items.each do |line_item| %>
    <table border="1" class="table table-order">
      <tr>
	<td class="check icon">
	  <i class="fa fa-check-square-o" aria-hidden="true"></i>
	</td>
	<td class="check icon">
	  <i class="fa fa-square-o" aria-hidden="true"></i>
	</td>
	<td class="item-name">
	<p>
	  <%= line_item.product.name %>
	</p>
	</td>
	<td class="item-quantity">
	<p>
	<% case line_item.product.item_amount_type %>
	<% when 1, 3, 5, 7 %>
	  <% if line_item.quantity > 0 %>
	    Items: <%= line_item.quantity %><br>
	  <% end %>
	<% end %>
	<% case line_item.product.item_amount_type %>
	<% when 2, 3, 6, 7 %>
	  <% if line_item.pounds.to_f > 0 %>
	    Pounds: <%= line_item.pounds %><br>
	  <% end %>
	<% end %>
	<% case line_item.product.item_amount_type %>
	<% when 4, 5, 6, 7 %>
	  <% if line_item.case > 0 %>
	    Cases: <%= line_item.case %>
	  <% end %>
	<% end %>
	</p>
	</td>
	<td class="item-price">
	<p>
	  <%= number_to_currency(line_item.price) %>
	</p>
	</td>
      </tr>
      <tr>
      </tr>
    </table>

	<!--<p>
	<strong>
	  Product Description:
	</strong>
	  <%#= product.product.description %>
	</p>

	-->
	<% end %>
	</p>
	<br>
	<br>

	<%# TODO add order info %>
      <% end %>
  </div>
</div>
